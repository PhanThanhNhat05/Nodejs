extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    h1(class="mb-4") Thêm mới sản phẩm

    form(
        action=`${prefixAdmin}/products/create`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
    )
        // Tiêu đề
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )

        // Mô tả
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
            )
        div(class="form-group")
            label(for="desc") Nội dung
            textarea(
                class="form-control textarea-mce"
                id="content"
                name="content"
                rows="5"
            )
        
        // Giá
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"
            )

        // Giảm giá
        div(class="form-group")
            label(for="discount") % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value="0"
                min="0"
            )

        // Số lượng
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
            )

        // Ảnh
        div(class="form-group" upload-image)
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            div(style="position: relative; display: inline-block; margin-top: 10px;")
                img(
                    src=""
                    upload-image-preview
                    class="image-preview"
                    style="max-width: 300px; max-height: 300px; display: none;"
                )
                span(
                    upload-image-close
                    style="display: none; position: absolute; top: 5px; right: 5px; background: #dc3545; color: white; border-radius: 50%; width: 30px; height: 30px; text-align: center; line-height: 30px; cursor: pointer; font-weight: bold; border: 2px solid white; box-shadow: 0 2px 5px rgba(0,0,0,0.3);"
                ) ×

        // Trạng thái
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
            )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động

        // Vị trí
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
            )

        // Nút tạo mới
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới

    script(src="/admin/js/product.js")